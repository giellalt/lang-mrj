!! Verb inflection
!! ---------------
!! Hill Mari (Western Mari) verbs are inflected for (subject) person, tense and mood.

LEXICON VAux
+V+Aux: # ;

LEXICON V-amTag
+V:%> INDPRSSG1-am ;
+V:%> INDPRSSG2-am ;
+V:%> INDPRSSG3-am ;
+V:%> INDPRSPL1-am ;
+V:%> INDPRSPL2-am ;
+V:%> INDPRSPL3-am ;

+V:%> INDPRT1SG1-am ;
+V:%> INDPRT1SG2-am ;
+V:%> INDPRT1SG3-am ;
+V:%> INDPRT1PL1-am ;
+V:%> INDPRT1PL2-am ;
+V:%> INDPRT1PL3-am ;

+V:%> INDPRT2SG1-am ;
+V:%> INDPRT2SG2-am ;
+V:%> INDPRT2SG3-am ;
+V:%> INDPRT2PL1-am ;
+V:%> INDPRT2PL2-am ;
+V:%> INDPRT2PL3-am ;

+V: INF ;


LEXICON V-emTag
+V:%> INDPRSSG1-em ;
+V:%> INDPRSSG2-em ;
+V:%> INDPRSSG3-em ;
+V:%> INDPRSPL1-em ;
+V:%> INDPRSPL2-em ;
