!! Verb inflection
!! ---------------
!! Hill Mari (Western Mari) verbs are inflected for (subject) person, tense and mood.

LEXICON VAux
+V+Aux: # ;

LEXICON V-amTag !!= @CODE@ ӹштӓш:ӹшт
+V: INDPRSSG1-am ;
+V: INDPRSSG2-am ;
+V: INDPRSSG3-am ;
+V: INDPRSPL1-am ;
+V: INDPRSPL2-am ;
+V: INDPRSPL3-am ;

+V: INDPRT1SG1-am ;
+V: INDPRT1SG2-am ;
+V: INDPRT1SG3-am ;
+V: INDPRT1PL1-am ;
+V: INDPRT1PL2-am ;
+V: INDPRT1PL3-am ;

+V: INDPRT2SG1-am ;
+V: INDPRT2SG2-am ;
+V: INDPRT2SG3-am ;
+V: INDPRT2PL1-am ;
+V: INDPRT2PL2-am ;
+V: INDPRT2PL3-am ;

+V: IMPRTSG2-am   ;

+V: INF ;


LEXICON V-emTag
+V: INDPRSSG1-em ;
+V: INDPRSSG2-em ;
+V: INDPRSSG3-em ;
+V: INDPRSPL1-em ;
+V: INDPRSPL2-em ;
+V: INDPRSPL3-em ;

+V: INDPRT1SG1-em ;
+V: INDPRT1SG2-em ;
+V: INDPRT1SG3-em ;
+V: INDPRT1PL1-em ;
+V: INDPRT1PL2-em ;
+V: INDPRT1PL3-em ;

+V: INDPRT2SG1-em ;
+V: INDPRT2SG2-em ;
+V: INDPRT2SG3-em ;
+V: INDPRT2PL1-em ;
+V: INDPRT2PL2-em ;
+V: INDPRT2PL3-em ;

+V: INF ;

!!!!!!!!!!!!!!!
!! !!NONPAST !!
!!!!!!!!!!!!!!!
!! am
LEXICON INDPRSSG1-am
+Ind+Prs+Sg1:%>ам K ;

LEXICON INDPRSSG2-am
+Ind+Prs+Sg2:%>ат K ;

LEXICON INDPRSSG3-am
+Ind+Prs+Sg3:%>еш K ; 

LEXICON INDPRSPL1-am
+Ind+Prs+Pl1:%>ынА1 K ;

LEXICON INDPRSPL2-am
+Ind+Prs+Pl2:%>ыдА1 K ;

LEXICON INDPRSPL3-am
+Ind+Prs+Pl3:%>ыт K ;


!! em
LEXICON INDPRSSG1-em
+Ind+Prs+Sg1:%>ем K ;

LEXICON INDPRSSG2-em
+Ind+Prs+Sg2:%>ет K ;

LEXICON INDPRSSG3-em
+Ind+Prs+Sg3:%>А1 K ;

LEXICON INDPRSPL1-em
+Ind+Prs+Pl1:%>енӓ K ;

LEXICON INDPRSPL2-em
+Ind+Prs+Pl2:%>едӓ K ;

LEXICON INDPRSPL3-em
+Ind+Prs+Pl3:%>А1т K ;

!!!!!!!!!!!!!!!!!!
!! !!PRETERIT 1 !!
!!!!!!!!!!!!!!!!!!
!! am
LEXICON INDPRT1SG1-am
+Ind+Prt1+Sg1:%>Ы1м K ; !

LEXICON INDPRT1SG2-am
+Ind+Prt1+Sg2:%>Ы1ц K ; !

LEXICON INDPRT1SG3-am
+Ind+Prt1+Sg3:%>Ы1 K ; !

LEXICON INDPRT1PL1-am
