+V:%> INDPRT1SG3-em ;
+V:%> INDPRT1PL1-em ;
+V:%> INDPRT1PL2-em ;
+V:%> INDPRT1PL3-em ;

+V:%> INDPRT2SG1-em ;
+V:%> INDPRT2SG2-em ;
+V:%> INDPRT2SG3-em ;
+V:%> INDPRT2PL1-em ;
+V:%> INDPRT2PL2-em ;
+V:%> INDPRT2PL3-em ;

+V: INF ;

!!!!!!!!!!!!!
!! PRESENT !!
!!!!!!!!!!!!!

LEXICON INDPRSSG1-am
+Ind+Prs+Sg1:ам K ;

LEXICON INDPRSSG2-am
+Ind+Prs+Sg2:ат K ;

LEXICON INDPRSSG3-am
+Ind+Prs+Sg3:еш K ; ! эш ???

LEXICON INDPRSPL1-am
+Ind+Prs+Pl1:Ы1нА1 K ;

LEXICON INDPRSPL2-am
+Ind+Prs+Pl2:Ы1дА1 K ;

LEXICON INDPRSPL3-am
+Ind+Prs+Pl3:Ы1т K ;


!!
LEXICON INDPRSSG1-em
